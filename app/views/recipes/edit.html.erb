<%= form_for @recipe do |f| %>
  <%= f.text_field :name %>

  <% @all_ingredients.each do |ingredient| %>
    <%= label_tag "ingredient_#{ingredient.id}", ingredient.name %>
    <%= check_box_tag "ingredient_ids[]", ingredient.id, @recipe_ingredients.include?(ingredient), id: "ingredient_#{ingredient.id}" %>
  <% end %>

  <%= f.submit %>
<% end %>
