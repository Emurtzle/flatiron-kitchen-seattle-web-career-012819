<%= form_for @recipe do |f| %>
  <%= f.text_field :name %>

  <% @all_ingredients.each do |ingredient| %>
    <%= label_tag "ingredient_#{ingredient.id}" %>
    <%= check_box_tag "recipe[ingredient_ids][]", ingredient.id, @recipe_ingredients.include?(ingredient) %>
  <% end %>

  <%= f.submit %>
<% end %>
